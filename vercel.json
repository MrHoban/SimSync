{
  "framework": "vite",
  "buildCommand": "cd simsync/frontend && npm install && npm run build",
  "outputDirectory": "simsync/frontend/dist",
  "devCommand": "cd simsync/frontend && npm run dev",
  "installCommand": "cd simsync/frontend && npm install",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./simsync/backend/",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}